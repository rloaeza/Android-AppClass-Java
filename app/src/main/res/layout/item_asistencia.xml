<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tvId"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioButton
        android:id="@+id/rbAlumno"
        android:layout_width="295dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:text="RadioButton"
        android:textColor="@color/colorTexto" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/rbAlumno"
        android:layout_marginEnd="24dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="@color/colorTexto3" />

    <ImageButton
        android:id="@+id/ibEliminar"
        android:layout_width="35dp"
        android:layout_height="27dp"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignTop="@+id/rbAlumno"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/borrar" />

    <ImageButton
        android:id="@+id/ibCompartir"
        android:layout_width="35dp"
        android:layout_height="29dp"
        android:layout_alignEnd="@+id/textView3"
        android:layout_below="@+id/ibEliminar"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/compartir" />

</RelativeLayout>