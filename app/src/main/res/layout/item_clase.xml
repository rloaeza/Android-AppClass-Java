<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNombreClase"
        android:layout_width="293dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCantidadAlumnos"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvNombreClase"
        android:layout_below="@+id/tvNombreClase"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ivEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvNombreClase"
        android:layout_marginEnd="15dp"
        android:background="@drawable/configuracion" />

</RelativeLayout>